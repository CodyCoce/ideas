<!-- JAVASCRIPT -->
<script type="text/javascript">
// When the menu button is clicked then this function runs
function openNav() {
  document.getElementById("mySidenav").style.width = "auto";
  document.getElementById("mySidenav").style.opacity = "1";
}

// When the x button is clicked or the mouse moves off of the sidenav then this function runs
function closeNav() {
  document.getElementById("mySidenav").style.width = "0px";
  document.getElementById("mySidenav").style.opacity = "0";
}

// When the user clicks on any dropdown button then this function runs
function openDropRight() {
  document.getElementById("mySidenav").style.width = "370px";
}
</script>
