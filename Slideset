<script>
// find elements
var banner = $("#banner-message")
var button1 = $("#button1")
var button2 = $("#button2")
var button3 = $("#button3")
var ccontainer = $("#card-container")

button1.on("click",function(){
button1.removeClass("activeButton")
button2.removeClass("activeButton")
button3.removeClass("activeButton")
button1.addClass("inactiveButton")
button2.addClass("inactiveButton")
button3.addClass("inactiveButton")
ccontainer.animate({opacity:0,},500,function()
{
button1.removeClass("inactiveButton")
button1.addClass("activeButton")
ccontainer.html('<table id="card-container" align="center"><tr><td><div id="card"><div id="card-message"><p>Join The Movement!</p></div><div id="card-image"><img src="images/jointhemovement.jpg"></div></div></td><td><div id="card"><div id="card-message"><p>In The News!</p></div><div id="card-image"><img src="images/inthenews.jpg"></div></div></td><td><div id="card"><div id="card-message"><p>For Underserved Victims!</p></div><div id="card-image"><img src="images/forunderservedvictims.jpg"></div></div></td></tr></table>')}
);ccontainer.animate({opacity:1,},800,function(){});});

button2.on("click",function(){
button1.removeClass("activeButton")
button2.removeClass("activeButton")
button3.removeClass("activeButton")
button1.addClass("inactiveButton")
button2.addClass("inactiveButton")
button3.addClass("inactiveButton")
ccontainer.animate({opacity:0,},500,function()
{
button2.removeClass("inactiveButton")
button2.addClass("activeButton")
ccontainer.html('<table id="card-container" align="center"><tr><td><div id="card"><div id="card-message"><p>Join Our Newsletter!</p></div><div id="card-image"><img src="images/joinournewsletter.jpg"></div></div></td><td><div id="card"><div id="card-message"><p>Spreading Awareness!</p></div><div id="card-image"><img src="images/spreadingawareness.jpg"></div></div></td><td><div id="card"><div id="card-message"><p>Be The Change!</p></div><div id="card-image"><img src="images/bethechanges.jpg"></div></div></td></tr></table>')}
);ccontainer.animate({opacity:1,},800,function(){});});

button3.on("click",function(){
button1.removeClass("activeButton")
button2.removeClass("activeButton")
button3.removeClass("activeButton")
button1.addClass("inactiveButton")
button2.addClass("inactiveButton")
button3.addClass("inactiveButton")
